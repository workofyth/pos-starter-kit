# ==========================
# POS Application Environment Variables
# Copy this file to .env and modify as needed
# ==========================

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="POS Starter Kit"
APP_DESCRIPTION="Fullstack Point of Sale System"

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/postgres
POSTGRES_DB=pos_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Authentication Configuration (using better-auth)
BETTER_AUTH_SECRET=your_super_secret_key_change_in_production
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# JWT Configuration (for custom auth if needed)
JWT_SECRET=your_jwt_secret_for_pos_app

# Multi-tenant Configuration
MULTI_TENANT_ENABLED=true
DEFAULT_BRANCH_ID=main

# Payment Configuration
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Email Configuration
EMAIL_FROM=noreply@posapp.com
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""

# File Storage Configuration
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_S3_REGION=""

# Reporting Configuration
REPORTS_EXPORT_LIMIT=1000
REPORTS_RETENTION_DAYS=365

# Inventory Configuration
INVENTORY_LOW_STOCK_THRESHOLD=10
INVENTORY_DEAD_STOCK_DAYS=30

# Point of Sale Configuration
POS_DEFAULT_TAX_RATE=0.0
POS_CURRENCY=IDR
POS_CURRENCY_SYMBOL=Rp

# Print Configuration
PRINTER_TYPE=thermal
PRINTER_IP_ADDRESS=
PRINTER_PORT=9100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# Development/Debug Configuration
DEBUG_MODE=false
DEV_TOOLS_ENABLED=true